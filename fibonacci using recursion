#include<stdio.h>
int fib(int n)
{

    if (n <= 1)

        return n;

    return fib(n - 1) + fib(n - 2);
}
 

int main()
{

    int n;
    printf("enter the number :");
    scanf("%d",&n);

    printf("%d", fib(n));

    getchar();

    return 0;
}

OUT PUT:
enter the number :8
21
enter the number :6
8
